<Window x:Class="PROG7312_ST10023767.Views.CategoryFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Category" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select a Category" FontSize="14" Margin="0,0,0,10"/>
            <ComboBox x:Name="cmbCategory" Width="250" 
          VerticalAlignment="Center" 
          ScrollViewer.CanContentScroll="False" 
          VerticalContentAlignment="Center">
                <ComboBoxItem Content="Music" IsSelected="True"/>
                <ComboBoxItem Content="Art" />
                <ComboBoxItem Content="Theater" />
                <ComboBoxItem Content="Sports" />
                <ComboBoxItem Content="Networking" />
                <ComboBoxItem Content="Other" />
            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Name="btnOK" Content="OK" Width="75" Click="btnOK_Click"/>
                <Button Name="btnCancel" Content="Cancel" Width="75" Margin="10,0,0,0" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
